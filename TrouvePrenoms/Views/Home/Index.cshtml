@model PrenomsViewModel

<div class="container">
    <div class="row">
        <p>Le site simple et sans fioritures pour aider les futurs parents à trouver un prénom.</p>
        <p>@(PrenomsViewModel.PRENOMS_COUNT * 2) prénoms par jour : @PrenomsViewModel.PRENOMS_COUNT garçons / @PrenomsViewModel.PRENOMS_COUNT filles</p>
    </div>

    <h2 class="text-success">Garçons</h2>
    <div class="row">
        @foreach (var g in Model.Boys)
        {
            Html.RenderPartial("_PrenomWidget", g);
        }
    </div>
    <h2 class="text-info">Filles</h2>
    <div class="row">
        @foreach (var f in Model.Girls)
        {
            Html.RenderPartial("_PrenomWidget", f);
        }
    </div>

    <nav aria-label="Date">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="@Url.Action("CustomDate", "Home", new { dateString = Model.PreviousDateString })" aria-label="Jour précédent">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Jour précédent</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">@Model.DateString</a></li>
            @if (Model.IsTodayOrFuture == false)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("CustomDate", "Home", new { dateString = Model.NextDateString })" aria-label="Jour suivant">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Jour suivant</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>
