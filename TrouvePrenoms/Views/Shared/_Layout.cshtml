<!DOCTYPE html>
<html lang="fr">
<head>

    @{string title = (PrenomsViewModel.PRENOMS_COUNT * 2) + " idées de prénoms par jour";

        if (ViewData["title"] != null)
        {
            title = ViewData["title"].ToString();
        }
    }

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Trouve Prénom - @title">
    <meta name="author" content="Damien Mayance">
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary">
    @*<meta name="twitter:site" content="@@valryon">*@
    <meta name="twitter:creator" content="@@valryon">
    <meta name="twitter:title" content="Trouve Prénom">
    <meta name="twitter:description" content="@title">
    @*<meta name="twitter:image" content="https://getbootstrap.com/assets/brand/bootstrap-social-logo.png">*@

    <!-- Facebook -->
    <meta property="og:url" content="http://trouveprenoms.azurewebsites.net/">
    <meta property="og:title" content="Trouve Prénom">
    <meta property="og:description" content="@title">
    <meta property="og:type" content="website">
    @*<meta property="og:image" content="http://getbootstrap.com/assets/brand/bootstrap-social.png">
    <meta property="og:image:secure_url" content="https://getbootstrap.com/assets/brand/bootstrap-social.png">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">*@

    <title>Trouve Prénom - @title</title>

    <link rel="stylesheet" href="~/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-grid.min.css" />
    @*<environment include="Development">*@
    <link rel="stylesheet" href="~/css/site.css" />
    @*</environment>
        <environment exclude="Development">
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>*@
    <script src="~/js/Chart.min.js"></script>
</head>
<body>
    <header>
        <div class="navbar navbar-expand navbar-dark bg-dark box-shadow">
            <a href="@Url.Action("Index","Home")" class="navbar-brand">
                <strong>Trouve Prénom</strong>
            </a>
            <div class="navbar-nav-scroll">
                <ul class="navbar-nav bd-navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link " href="@Url.Action("Index","Home")">Prénoms du jour</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="@Url.Action("Search","Home")">Recherche avancée</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="@Url.Action("Name","Home")">Mon prénom</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    @RenderBody()
    <hr />
    <footer class="text-muted">
        <div class="container">
            <p>&copy; 2018 - <a href="https://dmayance.com">Damien Mayance</a></p>
            <p>Données fournies par <a href="https://www.insee.fr/fr/statistiques/2540004">l'INSEE</a>.
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
